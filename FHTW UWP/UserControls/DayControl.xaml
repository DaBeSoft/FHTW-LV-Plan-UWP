<UserControl
    x:Class="FHTW_Universal.Logics.View.DayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    >

    <Grid x:Name="LayoutRoot" Background="{ThemeResource AppBarBackgroundThemeBrush}" Tapped="ButtonOpenClose_Tapped" >
        <Grid HorizontalAlignment="Center">
            <TextBlock x:Name="texctBoxDay" HorizontalAlignment="Left" Margin="55,30,0,0" TextWrapping="Wrap" Text="{Binding Path=DayName, FallbackValue='TAG UND DATUM HIER'}" VerticalAlignment="Top" Width="425" MaxHeight="50" FontSize="34"/>
            <StackPanel x:Name="stackPanel1" Margin="0,80,0,0" VerticalAlignment="Top" Height="Auto"/>
            <Button Name="ButtonOpenClose" Content="v" HorizontalAlignment="Left" Margin="0,20,0,0" VerticalAlignment="Top" Width="45" MinWidth="10"/>
        </Grid>

    </Grid>
</UserControl>
