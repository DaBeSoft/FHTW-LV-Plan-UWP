<UserControl
    x:Class="FHTW_Universal.Logics.View.LVControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="80"
    d:DesignWidth="400">

    <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Left" Margin="44,6,0,0"     TextWrapping="Wrap" Text="{Binding Path=LVName, FallbackValue='FACHNAME'}"      VerticalAlignment="Top" FontSize="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="211,5,0,0"  TextWrapping="Wrap" Text="{Binding Path=FromTo, FallbackValue='VON A NACH B' }" VerticalAlignment="Top" FontSize="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="82,33,0,0"   TextWrapping="Wrap" Text="{Binding Path=Room, FallbackValue='F1.100/A7.93'}"    VerticalAlignment="Top" FontSize="25"/>

        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="80" Margin="40,0,0,0" Stroke="Black" VerticalAlignment="Top" Width="4"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="6" Margin="44,64,0,0" Stroke="Black" VerticalAlignment="Top" Width="356"/>

    </Grid>
</UserControl>
